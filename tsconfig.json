{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true, // Adicione se estiver usando decoradores TypeORM/Class-Validator heavily
    "experimentalDecorators": true // Adicione se estiver usando decoradores TypeORM/Class-Validator heavily
  },
  "include": [
    "src/**/*" // Garante que todos os arquivos em src sejam compilados
  ],
  "exclude": ["node_modules", "dist"]
}
